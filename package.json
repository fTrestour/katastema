{
  "name": "katastema",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "latest",
    "serve": "^14.2.4",
    "tailwindcss": "^3.4.14"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@kitajs/html": "^4.2.4",
    "@kitajs/ts-html-plugin": "^4.1.0",
    "concurrently": "^9.0.1"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev:css": "tailwindcss --watch -i ./src/styles.css -o ./dist/styles.css",
    "build:html": "bun run src/build.ts",
    "dev:html": "bun run --watch src/build.ts",
    "dev:serve": "serve dist",
    "dev": "concurrently \"bun lint:fix\" \"bun dev:css\" \"bun dev:html\" \"bun dev:serve\"",
    "build": "concurrently \"bun build:css\" \"bun build:html\""
  }
}
